{
   "name": "w3c-html-validator",
   "version": "1.2.1",
   "description": "Check the markup validity of HTML files using the W3C validator",
   "license": "MIT",
   "type": "module",
   "module": "dist/w3c-html-validator.js",
   "main": "dist/w3c-html-validator.umd.cjs",
   "types": "dist/w3c-html-validator.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/w3c-html-validator.js",
         "require": "./dist/w3c-html-validator.umd.cjs"
      },
      "./": "./dist/"
   },
   "bin": {
      "html-validator": "bin/cli.js",
      "w3c-html-validator": "bin/cli.js"
   },
   "repository": "github:center-key/w3c-html-validator",
   "homepage": "https://github.com/center-key/w3c-html-validator",
   "bugs": "https://github.com/center-key/w3c-html-validator/issues",
   "docs": "https://github.com/center-key/w3c-html-validator#readme",
   "author": "Thomas Davis <thomasalwyndavis@gmail.com>",
   "keywords": [
      "html",
      "html5",
      "validator",
      "w3c"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "node": true,
      "mocha": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "runScriptsConfig": {
      "build": [
         "rimraf build dist **/.DS_Store",
         "jshint . --exclude-path .gitignore",
         "eslint --max-warnings 0 . --ext .ts",
         "tsc",
         "tsc --module UMD --outDir build/umd",
         "copy-file build/umd/w3c-html-validator.js build/w3c-html-validator.umd.cjs",
         "add-dist-header build dist"
      ]
   },
   "scripts": {
      "pretest": "run-scripts build",
      "test": "mocha spec/*.spec.js --timeout 5000",
      "examples": "node examples.js"
   },
   "dependencies": {
      "chalk": "~5.1",
      "cli-argv-util": "~0.1",
      "fancy-log": "~2.0",
      "glob": "~8.0",
      "superagent": "~8.0"
   },
   "devDependencies": {
      "@types/fancy-log": "~2.0",
      "@types/glob": "~8.0",
      "@types/node": "~18.11",
      "@types/superagent": "~4.1",
      "@typescript-eslint/eslint-plugin": "~5.43",
      "@typescript-eslint/parser": "~5.43",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "copy-file-util": "~0.1",
      "copy-folder-util": "~0.2",
      "eslint": "~8.28",
      "jshint": "~2.13",
      "merge-stream": "~2.0",
      "mocha": "~10.1",
      "rimraf": "~3.0",
      "run-scripts-util": "~0.1",
      "typescript": "~4.9"
   }
}
